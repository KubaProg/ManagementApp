<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="kuba">
        <createTable tableName="employee">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="kuba">
        <createTable tableName="job_cycle">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_time" type="varchar(255)"/>
            <column name="end_time" type="varchar(255)"/>
            <column name="job_name" type="varchar(255)"/>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_jobCycle_employee"
                             referencedTableName="employee"
                             referencedColumnNames="id"/>
            </column>
            <column name="field_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_jobCycle_field"
                             referencedTableName="field"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>



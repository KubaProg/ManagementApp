<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="create_table_application_user" author="you">
        <createTable tableName="application_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_user_role" author="you">
        <createTable tableName="user_role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="create_table_user_roles" author="Kuba">
        <createTable tableName="user_roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_user_roles_role"
                             referencedTableName="user_role"
                             referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_user_roles_user"
                             referencedTableName="application_user"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="2" author="kuba">
        <createTable tableName="job_cycle">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_time" type="varchar(255)"/>
            <column name="end_time" type="varchar(255)"/>
            <column name="job_id" type="BIGINT">
            <constraints foreignKeyName="fk_jobCycle_job_id"
                         referencedTableName="Job"
                         referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="fk_jobCycle_application_user"
                             referencedTableName="application_user"
                             referencedColumnNames="id"/>
            </column>
            <column name="field_id" type="BIGINT">
                <constraints foreignKeyName="fk_jobCycle_field"
                             referencedTableName="Field"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>


